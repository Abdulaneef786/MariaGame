#include <d3d9.h> 
#include <d3dx9.h> 
#include <string>  

using namespace std; 

class Sprite {
	string id; 
	RECT r; 
	int width; 
	int height; 
	LPDIRECT3DTEXTURE9 texture; 




public:
	Sprite(string id, 
		RECT rect = RECT(),
		LPDIRECT3DTEXTURE9 tex = NULL, 	
		D3DXCOLOR transparentColor, 
		); 

	RECT GetRect(); 
	void SetRect(RECT r); 




}

typedef Sprite* LPSPrites; 






